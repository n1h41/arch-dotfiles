[global]
    follow = mouse
    width = (300,400)
    height = 250
    padding = 12
    horizontal_padding = 12
    frame_width = 2
    idle_threshold = 120
    frame_color = "#343746"
    font = Roboto mono 12
    markup = full
    show_indicators = false
    min_icon_size = 50
    max_icon_size = 50
    sticky_history = false
    history_length = 50
    dmenu = /usr/local/bin/rofi -dmenu -theme ~/.config/rofi/launcher/style.rasi -p dunst:
    corner_radius = 20
    mouse_left_click = do_action, close_current
