{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "github-copilot/claude-sonnet-4.5",
	"small_model": "github-copilot/gpt-4.1",
  "autoupdate": true,
	"agent": {
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
		"plan": {
      "mode": "primary",
      "model": "github-copilot/gpt-4.1",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
	},
	"mcp": {
    "fileserver": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "~/dev/"],
      "enabled": true
    }
	}
}
